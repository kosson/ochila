{{!< layout}}
{{> nav-resurse}}
{{> messages}}
    <h3>Resursele cu care ai contribuit</h3>
    <div id="resurseincred" class="resurse">
        <div class="row">
            <div class="card-deck">
                {{#each resurse}}
                    <div class="col-sm-4 d-flex align-items-stretch p-2">
                        <div class="card ml-2 mh-100">
                            <img class="card-img-top" src="{{this.coperta}}" alt="{{this.title}}">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text">{{this.description}}</p>
                                <a href="/profile/resurse/{{this.id}}" class="btn btn-primary">Afișează</a>     
                                {{!-- <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>      --}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>